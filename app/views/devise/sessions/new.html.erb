<%= render "/shared/navbar" %>
  <div id="background-login">
    <h2>Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" }%>
        <%= f.input :remember_me,
        label:"MÃ©morisez ma connexion",
         as: :boolean if devise_mapping.rememberable?%>
      </div>

        <%= f.button :submit, "SE CONNECTER", :class => 'btn button-home w-100' %>
        <%= link_to "Inscription", new_user_registration_path, :class => 'btn button-home w-100 mt-4' %>
    <% end %>
  </div>
</div>
