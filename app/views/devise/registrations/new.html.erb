<%= render "/shared/navbar" %>
<div class="background-login">
  <h2>Inscription</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs" id="register_form" data-controller ="signin-shelter">
      <%= f.input :last_name,
                  label: "Nom",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name" } %>
      <%= f.input :first_name,
                  label: "Prénom",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name" } %>
      <%= f.input :email,
                  label: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :phone_number,
                  label: "Numéro de téléphone",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "phone_number" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmer le mot de passe",
                  required: true,
                  hint: "Les mots de passe doivent être identiques",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :employee,
                  input_html: { data: { action: "change->signin-shelter#updateInputShelter", signin_shelter_target: "checkbox", autocomplete: "employee?" } },
                  label: "Vous êtes employé d'un refuge",
                  autofocus: true %>
      <%= f.input :shelter_id,
                  collection: Shelter.all,
                  label: "Veuillez indiquer votre refuge",
                  autofocus: true,
                  input_html: { autocomplete: "shelter" },
                  wrapper_html: {data: {signin_shelter_target: "shelterInput"}, class: "d-none"} %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up", :class => 'btn button-home w-100' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
