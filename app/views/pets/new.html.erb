<%= render "shared/navbar" %>

<div class="container">
  <div class="text-center mb-3">
    <h2>Modifier un animal</h2>
  </div>

  <%= simple_form_for @pet do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs" id="register_form">
      <%= f.input :name,
                  label: "Nom",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" } %>
      <%= f.input :age,
                  label: "Date de naissance",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "birthday" } %>
      <%= f.input :race,
                  label: "Race",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "race" } %>
      <%= f.input :category,
                  label: "Espèce",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "category" } %>
      <%= f.input :family_friendly,
                  label: "Est-il adapté aux enfants ?",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "family_friendly" } %>
                    <%= f.input :cat_friendly,
                  label: "Est-il adapté aux chats ?",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "cat_friendly" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Enregistrer", :class => 'btn button-home w-100' %>
    </div>
  <% end %>
</div>
